<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.loryleen.courtcounter.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!--START TeamA-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/teamA_name"
            android:text="Team A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="4dp"
            />

        <TextView
            android:id="@+id/teamA_score"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="4dp"
            />

        <Button
            android:id="@+id/three_pointer_teamA"
            android:text="+3 points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="threePointerTeamA"
            />

        <Button
            android:id="@+id/two_pointer_teamA"
            android:text="+2 points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="twoPointerTeamA"
            />

        <Button
            android:id="@+id/free_throw_teamA"
            android:text="Free Throw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="freeThrowTeamA"
            />
    </LinearLayout>
    <!--END TeamA-->

    <!--START TeamB-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/teamB_name"
            android:text="Team B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="4dp"
            />

        <TextView
            android:id="@+id/teamB_score"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="4dp"
            />

        <Button
            android:id="@+id/three_pointer_teamB"
            android:text="+3 points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="threePointerTeamB"
            />

        <Button
            android:id="@+id/two_pointer_teamB"
            android:text="+2 points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="twoPointerTeamB"
            />

        <Button
            android:id="@+id/free_throw_teamB"
            android:text="Free Throw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="freeThrowTeamB"
            />
    </LinearLayout>

</LinearLayout>

